<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <rotate
                android:fromDegrees="270"
                android:pivotX="50%"
                android:pivotY="50%">
            <shape android:shape="oval">

                <gradient android:type="sweep"
                          android:startColor="#00FFC6"
                          android:centerColor="#00A38D"
                          android:endColor="#213154"/>
            </shape>
        </rotate>
    </item>
    <item
            android:left="5dp"
            android:top="5dp"
            android:right="5dp"
            android:bottom="5dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF"/>
            <size
                    android:width="10dp"
                    android:height="10dp"/>
        </shape>
    </item>
</layer-list>